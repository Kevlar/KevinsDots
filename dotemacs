(defun add-path (p)
  (setq load-path (cons p load-path)))

(add-path "~/emacs/config")
(add-path "~/emacs/site-lisp")
(add-path "~/emacs/site-lisp/themes")

(load "custom.el")
(load "libraries.el")
(load "keybindings.el")
(load "options.el")
(load "mode-configs.el")

(setq c-default-style "stroustrup")

;; Color Theme ;;
(require 'color-theme)
(color-theme-initialize)
(color-theme-kevlar)

